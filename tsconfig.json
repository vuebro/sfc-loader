{
	"compilerOptions": {
		"noImplicitAny": true,
		"allowJs": true,
		"module": "ESNext",
		"target": "ES2017",
		"allowSyntheticDefaultImports": true,
		"lib": [
			"ESNext",
			"DOM"
		],
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"declaration": true,
		"outDir": "./dist"
	},
	"include": [
		"./src/**/*.ts"
	]
}
